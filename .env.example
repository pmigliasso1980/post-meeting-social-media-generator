# --- App ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-random-string

# --- Database (e.g., Supabase or any Postgres URL) ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/post_meeting_social

# --- OpenAI ---
OPENAI_API_KEY=sk-...

# --- Recall.ai ---
RECALL_API_KEY=recall_...
RECALL_JOIN_MINUTES_BEFORE=5

# --- Google OAuth & Calendar ---
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
# Space-separated scopes; these will be used to request Calendar access as well
GOOGLE_OAUTH_SCOPES="openid email profile https://www.googleapis.com/auth/calendar.readonly"

# --- LinkedIn OAuth (for posting) ---
LINKEDIN_CLIENT_ID=...
LINKEDIN_CLIENT_SECRET=...
# LinkedIn uses OAuth2; set callback to /api/auth/callback/linkedin

# --- Facebook OAuth (for posting) ---
FACEBOOK_CLIENT_ID=...
FACEBOOK_CLIENT_SECRET=...
# Facebook callback: /api/auth/callback/facebook
